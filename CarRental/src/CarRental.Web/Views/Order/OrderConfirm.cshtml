@model CarRental.Web.Models.OrderConfirm

<h1>
    Patvirtinkite užsakymą
</h1>

<div class="orderSubmitDiv">
    <h3>Vairuotojo informacija</h3>
    <hr style="border-color: black" />
    <form asp-controller="Order" asp-action="OrderSubmit" class="form-horizontal" method="post">
        <input asp-for="AutoId" type="hidden" />
        <input asp-for="Price" type="hidden" id="priceTotal" />
        <div class="form-group">
            <label asp-for="StartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StartDate" id="startDate" class="form-control input-width280" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EndDate" id="endDate" class="form-control input-width280" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FirstName" id="firstname" class="form-control input-width280" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LastName" id="lastname" class="form-control input-width280" disabled="disabled"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" id="email" class="form-control input-width280" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PhoneNumber" id="phone" class="form-control input-width280" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PickUp" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PickUp" class="form-control input-width280" disabled="disabled"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DropOff" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DropOff" class="form-control input-width280" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Comments" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Comments" class="form-control input-width280" rows="5" disabled="disabled"></textarea>
            </div>
        </div>

        <div class="carResultDiv row">
            <table>
                <tbody>
                    <tr>
                        <td>
                            <img class="carImage" src="/Uploads/@Model.Car.Photo" />
                        </td>
                        <td class="carResultRow_CarSpec">
                            <h2>@Model.Car.Make @Model.Car.Model</h2>
                            <div class="carSpecs">
                                <div>
                                    <span>Metai: @Model.Car.Year</span>
                                </div>
                                <div>
                                    <span>Kuro tipas: @Model.Car.FuelType</span>
                                </div>
                            </div>
                            <h3>
                                Galutinė kaina:
                                <span id="priceField"></span>
                            </h3>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-1">
                <button type="submit" class="btn btn-default" id="btnSubmit">Patvirtinti</button>
            </div>
            <div class="col-md-9">
                <input type="button" value="Atšaukti" onclick="location.href='@Html.Raw(@Url.Action("OrderSubmit", "Order",
                                    new { @id = Model.AutoId, @start = Model.StartDate, @end = Model.EndDate }))'" class="btn btn-default" id="btnSubmit"/>
            </div>
        </div>
    </form>
</div>


<script>
    $(document).ready(function () {
        @*var start = @Model.StartDate.Year.ToString() + "-" + @Model.StartDate.Month.ToString()  + "-" + @Model.StartDate.Day.ToString();*@
        var start = new Date(@Model.StartDate.Year, @Model.StartDate.Month, @Model.StartDate.Day, @Model.StartDate.Hour, @Model.StartDate.Minute);
        var end = new Date(@Model.EndDate.Year, @Model.EndDate.Month, @Model.EndDate.Day, @Model.EndDate.Hour, @Model.EndDate.Minute);
        document.getElementById("dateStart").innerHTML = new Date(moment(start.value, "MM/DD/YYYY hh:mm").format("YYYY/MM/DD hh:mm"));;
        alert(start);
    });

    $("#datetimepickerStart").datetimepicker({
        format: 'YYYY-MM-DD hh:mm'
    });

    $("#datetimepickerEnd").datetimepicker({
        format: 'YYYY-MM-DD hh:mm'
    });
</script>